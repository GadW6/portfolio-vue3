<div class="container">
  <h3 class="text-center py-3">Adding Tags</h3>
  <form action="/admin/tags/add" method="POST" class="bg-light border p-5 rounded-3 needs-validation mb-5" enctype="multipart/form-data" autocomplete="off" novalidate>
    <div class="row">
      <div class="mb-3 col-12">
        <label for="name" class="form-label">Title<span class="ml-2 text-danger">*</span></label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3 col-12">
        <label class="form-label" for="image">Tag Image<span class="ml-2 text-danger">*</span></label>
        <input type="file" class="form-control" id="image" name="image">
      </div>
    </div>
    <div class="text-center mt-4">
      <button type="submit" class="border border-secondary btn">Add Tag</button>
    </div>
  </form>
</div>